<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>


    <script src="~/Content/js/angular.js"></script>

    <script src="~/Content/js/angular-animate.js"></script>
    <script src="~/Content/js/angular-route.js"></script>

    <script src="~/Content/Department/module.js"></script>

    <script src="~/Content/Department/service.js"></script>
    <script src="~/Content/Department/controller.js"></script>


    @*<script src="~/Assets/js/bootstrap.min.js"></script>*@
</head>
<body ng-app="myApp" ng-controller="myController">
    <div class="container">
        <hr />
        <div class="alert alert-info alert-dismissible" role="alert" ng-if="message">
            {{message}}
            <button type="button" class="close" aria-label="close">
                <span aria-hidden="true" ng-click="clearInfo()">&times;</span>
            </button>
        </div>


        <h4>
            Department List<button type="button" style="width:auto" class="btn btn-sm btn-info float-right" data-toggle="modal" data-target="#AddModal">+ Add New Department</button>
        </h4>

        <table class="table table-bordered table-striped  table-sm">
            <thead>
                <tr class="bg-secondary text-light">
                    <td>Sl No</td>
                    <td>Department Name</td>
                   
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="department in Departments">
                    <td>{{$index+1}}</td>
                    <td>{{department.DepartmentName}}</td>
                    
                    <td>
                        <button type="button" data-toggle="modal" data-target="#editModal" ng-click="selectedDepartment(department)" class="btn btn-sm btn-info">Edit</button>
                        <button type="button" data-toggle="modal" data-target="#deleteModal" ng-click="selectedDepartment(department)" class="btn btn-sm btn-danger">Delete</button>
                    </td>
                </tr>
            </tbody>
        </table>


        <div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add New Department</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <form ng-submit="submit()">

                            <div class="form-group">
                                <label for="username" class="col-form-label">Department Name:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="newDepartment.DepartmentName" id="username" placeholder="Department Name..." required>
                            </div>

                            

                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="submit" id="submit" class="btn btn-info" data-dismiss="modal" ng-click="addDepartment()">Save Department</button>
                            </div>

                        </form>
                    </div>


                </div>
            </div>
        </div>


        <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Department</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">

                        <form>
                            <input type="hidden" ng-click="clickedDepartment.DepartmentId" />
                            <div class="form-group">
                                <label for="username" class="col-form-label">Department Name:</label>
                                <input type="text" class="form-control form-control-sm" ng-model="clickedDepartment.DepartmentName" id="username" placeholder="Product Name...">
                            </div>

                           

                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-info" data-dismiss="modal" ng-click="updateDepartment()">Update Department</button>
                            </div>

                        </form>

                    </div>



                </div>
            </div>
        </div>

        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete Department</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <p>Are you sure ?? delete the department : <b class="text-primary"><u>{{clickedDepartment.DepartmentName}}</u></b></p>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
                        <button type="submit" class="btn btn-info" data-dismiss="modal" ng-click="deleteDepartment()">Yes</button>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>







